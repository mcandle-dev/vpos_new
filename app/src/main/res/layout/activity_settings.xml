<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="4dp"
                app:tint="#1976D2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/settings"
                android:textColor="#1976D2"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 매장 정보 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_store_info"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="예: VPOS"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shop"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etShop"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="예: 6F 나이키"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salesperson"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etSalesperson"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="예: 한아름 (224456)"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- BLE 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_ble_settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/broadcast_name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBroadcastName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="예: mcan"
            android:inputType="text"
            android:textSize="16sp"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- 비콘 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_beacon_settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_query"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Query"
                android:textAllCaps="false"
                android:textColor="#1976D2"
                app:cornerRadius="8dp"
                app:strokeColor="#1976D2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_start"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_stop"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#F44336"
                android:text="Stop"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_master_scan_config"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/scan_filter_config"
            android:textAllCaps="false"
            android:textColor="#1976D2"
            android:layout_marginBottom="24dp"
            app:cornerRadius="8dp"
            app:strokeColor="#1976D2" />

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- 고급 설정 섹션 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_advanced_settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_config"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Config"
                android:textAllCaps="false"
                android:textColor="#1976D2"
                app:cornerRadius="8dp"
                app:strokeColor="#1976D2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_uuid_config"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="UUID"
                android:textAllCaps="false"
                android:textColor="#757575"
                app:cornerRadius="8dp"
                app:strokeColor="#DDDDDD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_slave"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Slave"
                android:textAllCaps="false"
                android:textColor="#757575"
                app:cornerRadius="8dp"
                app:strokeColor="#DDDDDD" />
        </LinearLayout>

        <!-- 저장 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/save"
            android:textSize="16sp"
            android:backgroundTint="#1976D2"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
