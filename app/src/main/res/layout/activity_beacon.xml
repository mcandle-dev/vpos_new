<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Blue Header Bar -->
    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1976D2"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeaderLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="6F 스포츠관 나이키"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="한아름 (224456)"
            android:textColor="#E0E0E0"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- 상품 정보 섹션 타이틀 + Start 버튼 -->
    <LinearLayout
        android:id="@+id/layoutProductInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <TextView
            android:id="@+id/tvProductInfoLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product_info"
            android:textColor="#1976D2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_toggle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#1976D2"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:paddingHorizontal="16dp"
            android:minWidth="72dp"
            app:cornerRadius="6dp" />
    </LinearLayout>

    <!-- 상품 정보 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProductInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:strokeColor="#1976D2"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/layoutProductInfoHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:minHeight="100dp">

            <!-- 스캔 안내 (스캔 전) -->
            <LinearLayout
                android:id="@+id/layoutScanGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_signal_cellular_alt_24"
                    app:tint="#BDBDBD"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_guide"
                    android:textColor="#757575"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 로딩 중 (조회 중) -->
            <LinearLayout
                android:id="@+id/layoutProductLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:indeterminate="true"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_product"
                    android:textColor="#1976D2"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 상품 정보 (스캔 후) -->
            <LinearLayout
                android:id="@+id/layoutProductDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문번호: 260115143"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이키알파플라이3"
                    android:textColor="#212121"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvProductOption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="265 / 블랙"
                        android:textColor="#424242"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="349,000원"
                        android:textColor="#1976D2"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Device List Label - 결제 대기고객 (파란색) -->
    <TextView
        android:id="@+id/tvDeviceListLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/waiting_customers"
        android:textColor="#1976D2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardProductInfo" />

    <!-- Device List Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDeviceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:strokeColor="#DDDEEE"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceListLabel"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"
        app:layout_constraintHeight_min="100dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="8dp"
            android:clipToPadding="false" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Status Bar -->
    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/viewStatusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_gray" />

        <TextView
            android:id="@+id/tvBottomStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/status_waiting"
            android:textColor="#757575"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="#8899AA" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
