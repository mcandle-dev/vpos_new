<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Blue Header Bar - 1줄로 축소 -->
    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#1976D2"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeaderLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="6F 스포츠관 나이키"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="한아름 (224456)"
            android:textColor="#E0E0E0"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- 상품 정보 타이틀 -->
    <TextView
        android:id="@+id/tvProductInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/product_info"
        android:textColor="#223344"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

    <!-- Control Buttons Area - 4 per row using GridLayout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:strokeColor="#1976D2"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductInfoLabel">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:padding="8dp"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_query"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="Query"
                android:textAllCaps="false"
                android:textColor="#1976D2"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp"
                app:strokeColor="#1976D2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_start"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#4CAF50"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_beacon_stop"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#F44336"
                android:text="Stop"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_master_scan_config"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="@string/scan_config"
                android:textAllCaps="false"
                android:textColor="#1976D2"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp"
                app:strokeColor="#1976D2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_master_scan"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#1976D2"
                android:text="Scan"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_master_scanStop"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#FF9800"
                android:text="@string/stop_scan"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:paddingHorizontal="4dp"
                app:cornerRadius="4dp" />

        </GridLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Device List Label - 결제 대기고객 -->
    <TextView
        android:id="@+id/tvDeviceListLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/waiting_customers"
        android:textColor="#223344"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardButtons" />

    <!-- Device List Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDeviceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="2dp"
        app:strokeColor="#DDDEEE"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceListLabel"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomBar"
        app:layout_constraintHeight_min="150dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="8dp"
            android:clipToPadding="false" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Status Bar -->
    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/viewStatusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_red" />

        <TextView
            android:id="@+id/tvBottomStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="연결 안됨"
            android:textColor="#F44336"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            app:tint="#8899AA" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
